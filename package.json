{
  "name": "snapdrop",
  "private": true,
  "version": "1.0.4",
  "description": "Local file sharing. Inspired by Apple's Airdrop",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "JustSch",
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "ua-parser-js": "^1.0.35",
    "unique-names-generator": "^4.7.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@reforged/maker-appimage": "^3.2.1",
    "electron": "^25.1.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./public/images/android-chrome-512x512"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "snapdrop",
            "setupIcon": "./public/images/android-chrome-512x512.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./public/images/android-chrome-512x512.png",
              "categories": [
                "Utility"
              ]
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "./public/images/android-chrome-512x512.png",
              "categories": [
                "Utility"
              ]
            }
          }
        },
        {
          "name": "@reforged/maker-appimage",
          "config": {
            "options": {
              "name": "snapdrop",
              "productName": "snapdrop",
              "genericName": "snapdrop",
              "icon": "./public/images/android-chrome-512x512.png",
              "categories": [
                "Utility"
              ],
              "AppImageKitRelease": 12
            }
          }
        }
      ]
    }
  }
}
